<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="github.com.rhacco.dota2androidapp">

    <!-- All Android permissions that the app makes use of -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/dota2logo"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning,AllowBackup">
        <activity
            android:name="github.com.rhacco.dota2androidapp.activities.MainActivity"
            android:label="@string/app_name"
            android:parentActivityName="github.com.rhacco.dota2androidapp.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="github.com.rhacco.dota2androidapp.activities.TopMatchesActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/activity_top_matches"
            android:parentActivityName="github.com.rhacco.dota2androidapp.activities.TopMatchesActivity">
        </activity>
        <activity
            android:name="github.com.rhacco.dota2androidapp.activities.LeaderboardsActivity"
            android:label="@string/activity_leaderboards"
            android:launchMode="singleTop"
            android:parentActivityName="github.com.rhacco.dota2androidapp.activities.LeaderboardsActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable_leaderboards"/>
        </activity>
        <activity
            android:name="github.com.rhacco.dota2androidapp.activities.AboutActivity"
            android:label="@string/activity_about"
            android:parentActivityName="github.com.rhacco.dota2androidapp.activities.AboutActivity">
        </activity>
    </application>
</manifest>