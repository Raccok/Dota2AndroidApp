<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <Button
        android:id="@+id/showLiveMatchesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="@string/activity_live_matches"/>
    <Button
        android:id="@+id/setFavHeroButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="@string/button_set_fav_hero"/>
    <TextView
        android:id="@+id/favHeroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>