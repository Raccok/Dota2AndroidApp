<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_paragraph">
    <RelativeLayout android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <TextView android:id="@+id/name"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:textSize="@dimen/text_title_small"/>
        <ImageView android:id="@+id/info"
                   android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="@dimen/margin_paragraph_larger"
                   android:layout_toEndOf="@id/name"
                   android:layout_toRightOf="@id/name"
                   android:src="@drawable/ic_info_white_24dp"
                   tools:ignore="ContentDescription"/>
    </RelativeLayout>
    <TextView android:id="@+id/behavior"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/header"/>
    <TextView android:id="@+id/dmg_type"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/behavior"/>
    <TextView android:id="@+id/pierces_spell_immunity"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/dmg_type"/>
    <TextView android:id="@+id/cooldown"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/pierces_spell_immunity"/>
    <TextView android:id="@+id/mana_cost"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/cooldown"/>
    <TextView android:id="@+id/attributes"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/mana_cost"
              android:layout_marginTop="3dp"/>
</RelativeLayout>