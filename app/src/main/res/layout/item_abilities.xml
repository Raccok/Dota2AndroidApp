<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView android:id="@+id/name"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:textSize="17sp"/>
    <ImageView android:id="@+id/info"
               android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:layout_marginStart="10dp"
               android:layout_marginTop="15dp"
               android:layout_toEndOf="@id/name"
               android:layout_toRightOf="@id/name"
               android:src="@drawable/info_24dp"
               tools:ignore="ContentDescription"/>
    <TextView android:id="@+id/behavior"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/name"
              android:layout_marginTop="2dp"
              android:textSize="@dimen/text_hero_info"/>
    <TextView android:id="@+id/dmg_type"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/behavior"
              android:textSize="@dimen/text_hero_info"/>
    <TextView android:id="@+id/pierces_spell_immunity"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/dmg_type"
              android:textSize="@dimen/text_hero_info"/>
    <TextView android:id="@+id/cooldown"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/pierces_spell_immunity"
              android:textSize="@dimen/text_hero_info"/>
    <TextView android:id="@+id/mana_cost"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/cooldown"
              android:textSize="@dimen/text_hero_info"/>
    <TextView android:id="@+id/attributes"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/mana_cost"
              android:layout_marginTop="3dp"
              android:textSize="@dimen/text_hero_info"/>
</RelativeLayout>